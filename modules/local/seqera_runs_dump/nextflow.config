process {
    withName: 'SEQERA_RUNS_DUMP' {
        ext.args = { [
                "--url=${params.seqera_cli_api_endpoint}",
                params.seqera_cli_extra_args ? params.seqera_cli_extra_args.split("\\s(?=--)") : ''
            ].flatten().unique(false).join(' ').trim() }
        ext.args2 = { params.skip_run_gantt ? '' : '--add-task-logs --add-fusion-logs' }
        publishDir = [
            path: { "${params.outdir}/${newMeta.pipelineName.replace("/", "_")}/runs_dump" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') || filename.endsWith('.json') ? null : filename }
        ]
    }
}